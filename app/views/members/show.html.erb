<% @title = @mp.name %>

<p><%= link_to 'edit', edit_member_path(@mp) %></p>

<ul>
  <% %w{ ed_id constituency_name name email website parliamentary_phone parliamentary_fax preferred_language active}.each do |val| %>
    <li><label><%= val %></label>: <span class="<%= val %>"><%= @mp.send(val) %></span></li>
  <% end %>
</ul>

<% if @mp.twitter? %>
  <script src="http://widgets.twimg.com/j/2/widget.js"></script>
  <script>
  new TWTR.Widget({
    version: 2,
    type: 'profile',
    rpp: 4,
    interval: 6000,
    width: 250,
    height: 300,
    theme: {
      shell: {
        background: '#333333',
        color: '#ffffff'
      },
      tweets: {
        background: '#000000',
        color: '#ffffff',
        links: '#4aed05'
      }
    },
    features: {
      scrollbar: false,
      loop: false,
      live: true,
      hashtags: true,
      timestamp: true,
      avatars: false,
      behavior: 'all'
    }
  }).render().setUser('<%= @mp.twitter %>').start();
  </script>
<% end %>