<li>
  <% if committee_member.mp.image? %>
    <%= link_to image_tag(committee_member.mp.image.url(:small), :alt => "photo of #{committee_member.mp.name}"), "", :title => "", :class => "photo" %>
  <% else %>
    <%= link_to image_tag("placeholder_photo_small.gif", :alt => committee_member.mp.name), member_path(committee_member.mp), :class => 'photo' %>
  <% end %>
  <div class="description">
    <span class="name"><%= link_to committee_member.mp.name, member_path(committee_member.mp), :title => "" %></span>
    <span class="action">
    </span>
    <small>
      <% if committee_member.mp and committee_member.mp.party %><span class="caucus"><%= committee_member.mp.party.name %></span>,<% end %>
      <% if committee_member.mp and committee_member.mp.riding %><span class="constituency"><%= committee_member.mp.riding.name %></span><% end %>
    </small>
  </div>
</li>